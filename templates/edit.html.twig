{% extends "layout.html.twig" %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <h2><small>Add new Task</small></h2>
        </div>
    </div>
    <form class="form-inline" action="{{ path_for('update', { 'id': task.id }) }}" method="post">
        <div>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Name</span>
                <input type="text" class="form-control" placeholder="Task name" aria-describedby="basic-addon1" name="name" value="{{ task.name }}">
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <input type="checkbox" aria-label="..." {% if task.active == true %}checked="checked"{% endif %} name="active" value="1">
                </span>
                <input type="text" disabled="disabled" class="form-control" aria-label="..." value="Active (default)">
            </div>
        </div>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Description</span>
                <textarea class="form-control" id="exampleTextarea" rows="6" name="description">{{ task.description }}</textarea>
            </div>
        <div>
            <div class="input-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
{% endblock %}
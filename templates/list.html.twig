{% extends "layout.html.twig" %}

{% block content %}
    <h2>User List</h2>
    <div class="bs-example" data-example-id="panel-without-body-with-table">
    <div class="panel panel-default">
    <div class="panel-heading">Panel heading</div>
    <table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th>Task Name</th>
        <th>Description</th>
        <th>Created</th>
        <th>Created</th>
    </tr>
    </thead>
    <tbody>
    {% for task in tasks %}

                    <tr>
                        <th scope="row">{{ task.id }}</th>
                        <td>{{ task.name }}</td>
                        <td>{{ task.description }}</td>
                        <td>{{ task.created_at }}</td>
                        <td>
                            <div class="btn-toolbar" role="toolbar" aria-label="...">
                                <div class="btn-group" role="group" aria-label="..."><a class="navbar-brand" href="{{ path_for('edit', { 'id': task.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit task</a></div>
                                <div class="btn-group" role="group" aria-label="..."><a class="navbar-brand" href="{{ path_for('delete', { 'id': task.id }) }}"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Coplete task</a></div>
                            </div>
                        </td>
                    </tr>
    {% endfor %}
    </tbody>
    </table>
    </div>
    </div>
{% endblock %}